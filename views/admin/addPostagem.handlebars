{{#each erros}}
    <div class="alert alert-danger">{{text}}</div>
    {{else}}
{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Nova postagem: </h4>
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo" class="mt-2">Título: </label>
            <input type="text" name="titulo" id="titulo" class="form-control" required> <!--o required eu coloco para fazer uma validação no próprio HTML, dizendo que o mesmo não pode me enviar um campo vazio.-->
            <label for="slug" class="mt-3">Slug: </label>
            <input type="text" name="slug" id="slug" class="form-control" required> <!--o required eu coloco para fazer uma validação no próprio HTML, dizendo que o mesmo não pode me enviar um campo vazio.-->
            <label for="descricao" class="mt-3">Descrição: </label>
            <input type="text" name="descricao" id="descricao" class="form-control" required> <!--o required eu coloco para fazer uma validação no próprio HTML, dizendo que o mesmo não pode me enviar um campo vazio.-->
            <label for="conteudo" class="mt-3">Conteúdo: </label><br>
            <textarea name="conteudo" id="conteudo" class="form-control" required> </textarea><!--o required eu coloco para fazer uma validação no próprio HTML, dizendo que o mesmo não pode me enviar um campo vazio.-->
            <br>
            <label for="categoria">Categoria</label>
            <select name="categoria" id="categoria" class="custom-select">
                {{#each categorias}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select><!--Select é a mesma coisa que o combo-box --><br>
            <button class="btn btn-success mt-4" type="submit">Criar Postagem</button>
        </form>
    </div>
</div>